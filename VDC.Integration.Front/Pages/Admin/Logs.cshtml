@page
@model VDC.Integration.Front.Pages.Admin.SentinelModel
@{
    ViewData["Title"] = "Logs";
}

<div class="titlePage"><h1><i class="bi bi-card-checklist"></i> @ViewData["Title"]</h1></div>

<small>Logs de problemas com integrações (Dead-Letter)</small>

<div class="load" id="load">
    <div class="lds-spinner"><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div><div></div></div>
</div>


<div id="filters" class="filters">
    <div id="options-select" class="options-select">
        <select id='select' class="form-control" onchange="changeTenantId(event)">
            <option value=0>Selecione o tenant</option>
        </select>        
        <div class="input-group mb-3">
            <input type="text" class="form-control" id="search" placeholder="busque por: Título, SKU, OrderId">
            <div class="input-group-prepend">
                <button class="btn btn-primary" style="border-bottom-right-radius:4px;border-top-right-radius:4px" type="button" onclick="searchLogs()">
                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                        <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>

<div class="region-table">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th scope="col" style="width:200px">LogId</th>
                <th scope="col" style="width:50px">Tipo</th>
                <th scope="col" style="width:50px">Webjob</th>
                <th scope="col" style="width:80px">Data Criação</th>
                <th scope="col" style="width:40px">Log</th>
                <th scope="col" style="width:40px">Payload</th>
            </tr>
        </thead>
        <tbody id="tableLogsBody"></tbody>
    </table>
    <div class="pagination" id="pagination">
        <div class="next" id="previous" onclick="changePagination(event)" hidden>Anterior</div>
        <div><span id="page"></span>. . . <span id="total"></span></div>
        <div class="next" id="next" onclick="changePagination(event)" hidden>Próximo</div>
    </div>
</div>

<button hidden id="btn-modal" type="button" class="btn btn-primary" data-toggle="modal" data-target="#modalLog">
</button>

<!-- Modal -->
<div class="modal fade bd-example-modal-xl" style="width:100vw;" id="modalLog" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-xl" style="width:100%;" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="TitleModal">Título do modal</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalLogs">
                . . .
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>



@section Scripts {
<script src="~/js/LogsController.js" asp-append-version="true"></script>
}

