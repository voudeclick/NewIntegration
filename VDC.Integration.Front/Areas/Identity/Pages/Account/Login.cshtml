@page
@model VDC.Integration.Front.Areas.Identity.Pages.Account.LoginModel

@{
    ViewData["Title"] = "Vou de Click Integration";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Vou de Click Integration</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/login-page.css" />
</head>
<body>
    <form id="social-login-form" asp-page="./ExternalLogin" asp-route-returnUrl="@Model.ReturnUrl" method="post">
        <input type="hidden" name="provider" id="provider"/>

        <div class="row w-100">
            <div class="col-12">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger" role="alert">
                        @TempData["ErrorMessage"]
                    </div>
                }
            </div>
            <div class="col-12 mb-4">
                <img src="~/imagens/integration-vdc-escuro@2x.png" />
            </div>
            <div class="col-12">
                @foreach (var provider in Model.ExternalLogins)
                {
                    <button type="submit" class="btn btn-outline-secondary btn-entrar" value="@provider.Name" 
                            title="Entrar usando o @provider.DisplayName account"                            
                    >
                        <img style="margin-bottom:3px; margin-right:5px; width: 20px" alt="Google sign-in" src="~/imagens/Google__G__Logo.svg.webp" />
                        Entrar com @provider.DisplayName
                    </button>

                }
            </div>
        </div>
    </form>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script src="~/js/social-login.js"></script>
</body>
</html>
